{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "containerRegistryName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Azure Container Registry"
      }
    },
    "appServicePlanName": {
      "type": "string",
      "metadata": {
        "description": "Name of the App Service Plan"
      }
    },
    "frontendAppName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Frontend App Service"
      }
    },
    "backendAppName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Backend App Service"
      }
    },
    "cosmosDBAccountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Cosmos DB account"
      }
    },
    "postgresServerName": {
      "type": "string",
      "metadata": {
        "description": "Name of the PostgreSQL server"
      }
    }
  },
  "variables": {
    "uniqueId": "[uniqueString(resourceGroup().id)]"
  },
  "resources": [
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2021-09-01",
      "name": "[parameters('containerRegistryName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Basic"
      },
      "properties": {
        "adminUserEnabled": true,
        "publicNetworkAccess": "Enabled"
      }
    },
    {
      "type": "Microsoft.AppService/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "B2",
        "tier": "Basic",
        "capacity": 1
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[parameters('frontendAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.AppService/serverfarms', parameters('appServicePlanName'))]"
      ],
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.AppService/serverfarms', parameters('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "DOCKER|[concat(parameters('containerRegistryName'), '.azurecr.io/frontend:latest')]",
          "appSettings": [
            {
              "name": "DOCKER_REGISTRY_SERVER_URL",
              "value": "[concat('https://', parameters('containerRegistryName'), '.azurecr.io')]"
            },
            {
              "name": "DOCKER_ENABLE_CI",
              "value": "true"
            },
            {
              "name": "REACT_APP_SERVER_URL",
              "value": "[concat('https://', parameters('backendAppName'), '.azurewebsites.net')]"
            },
            {
              "name": "REACT_APP_SERVER_WS_URL",
              "value": "[concat('wss://', parameters('backendAppName'), '.azurewebsites.net')]"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[parameters('backendAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.AppService/serverfarms', parameters('appServicePlanName'))]",
        "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDBAccountName'))]"
      ],
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.AppService/serverfarms', parameters('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "DOCKER|[concat(parameters('containerRegistryName'), '.azurecr.io/backend:latest')]",
          "appSettings": [
            {
              "name": "DOCKER_REGISTRY_SERVER_URL",
              "value": "[concat('https://', parameters('containerRegistryName'), '.azurecr.io')]"
            },
            {
              "name": "DOCKER_ENABLE_CI",
              "value": "true"
            },
            {
              "name": "PORT",
              "value": "8080"
            },
            {
              "name": "CORS_ORIGIN",
              "value": "[concat('https://', parameters('frontendAppName'), '.azurewebsites.net')]"
            },
            {
              "name": "JUDGE0_API_URL",
              "value": "https://judge0-api.example.com"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2021-06-15",
      "name": "[parameters('cosmosDBAccountName')]",
      "location": "[parameters('location')]",
      "kind": "MongoDB",
      "properties": {
        "databaseAccountOfferType": "Standard",
        "enableAutomaticFailover": false,
        "enableMultipleWriteLocations": false,
        "locations": [
          {
            "locationName": "[parameters('location')]",
            "failoverPriority": 0,
            "isZoneRedundant": false
          }
        ],
        "apiProperties": {
          "serverVersion": "4.0"
        }
      }
    },
    {
      "type": "Microsoft.DBforPostgreSQL/servers",
      "apiVersion": "2017-12-01",
      "name": "[parameters('postgresServerName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "B_Gen5_1",
        "tier": "Basic",
        "capacity": 1,
        "family": "Gen5"
      },
      "properties": {
        "createMode": "Default",
        "version": "11",
        "adminLoginPassword": "[parameters('postgresPassword')]",
        "administratorLogin": "judge0admin",
        "storageProfile": {
          "storageMB": 51200,
          "backupRetentionDays": 7,
          "geoRedundantBackup": "Disabled",
          "storageAutogrow": "Enabled"
        },
        "sslEnforcement": "ENABLED"
      }
    }
  ],
  "outputs": {
    "containerRegistryUrl": {
      "type": "string",
      "value": "[concat(parameters('containerRegistryName'), '.azurecr.io')]"
    },
    "frontendUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.Web/sites', parameters('frontendAppName'))).defaultHostName)]"
    },
    "backendUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.Web/sites', parameters('backendAppName'))).defaultHostName)]"
    }
  }
}
